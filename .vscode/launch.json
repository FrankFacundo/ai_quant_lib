{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ Tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/quant_tests",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Python pyquant",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/python/examples/forecasting/forecast_demo.py",
      "console": "integratedTerminal",
      "env": {"PYTHONPATH": "${workspaceFolder}/build/python"}
    }
  ]
}
